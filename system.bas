	CASE "5"
		GOSUB WINBAS
	
	CASE "6"
		GOSUB ACERCA
 
	
		CASE "7"
		GOSUB SALIR
 
		CASE ELSE
		GOSUB ERRORSELECCION
 
END SELECT
 
